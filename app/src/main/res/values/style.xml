<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/search_hint_color</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="hintTextColor">@color/white</item>
        <item name="hintEnabled">true</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:src">@drawable/icn_add</item>
        <item name="android:backgroundTint">@color/color_add_button</item>
        <item name="maxImageSize">@dimen/_35sdp</item>
        <item name="tint">@color/white</item>
    </style>
</resources>